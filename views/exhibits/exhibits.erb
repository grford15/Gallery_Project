<head>
  <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">
  <style>
  body {
    background-image:none;
    background: linear-gradient(#bdc3c7, #2c3e50);
    background-size: 150%;
    background-repeat: no-repeat;
    font-family: 'Montserrat', sans-serif;
  }

  li {
    display: inline-block;
    }

  </style>
</head>

<h1>Exhibits</h1>

<% for exhibit in @exhibits %>

<table class = "exhibit_table">
<tr>
  <th>Title</th>
  <th>Year Created</th>
  <th>Medium</th>
  <th>Artist </th>
</tr>
<tr>
    <td><a href="/exhibits/<%=exhibit.id%>"><%= exhibit.title%></a></td>
    <td><%= exhibit.year_created%></td>
    <td><%= exhibit.medium%></td>
    <td><%= exhibit.artist.name%></td>
  </tr>
</table>



<form method="post" action="/exhibits/delete/<%=exhibit.id%>">
  <input type="submit" value="Delete this Exhibit"/>

<a href="/exhibits/edit/<%=exhibit.id%>">Update Exhibits details</a>

<% end %>

<a href="/newexhibit">Add a new Exhibit</a>
